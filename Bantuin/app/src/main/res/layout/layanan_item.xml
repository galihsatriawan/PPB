<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/margins_normal"
android:layout_marginRight="@dimen/margins_per_card"
android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="@dimen/width_normal"
    android:layout_height="@dimen/height_normal"
    android:layout_marginBottom="6dp"
    android:id="@+id/cont_img"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:contentPadding="0dp"
    android:layout_centerHorizontal="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/height_icon"
            android:layout_height="match_parent"
            android:id="@+id/imgLayanan"
            android:layout_gravity="center_horizontal"

            />

    </LinearLayout>

</android.support.v7.widget.CardView>

<TextView
    android:layout_width="@dimen/width_normal"
    android:layout_below="@+id/cont_img"
    android:layout_height="@dimen/height_text_cat"
    android:layout_gravity="center_horizontal|right"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/ubuntu_light"
    android:id="@+id/tvName"
    android:gravity="center_horizontal"
    android:text="Instalasi Listrik"
    android:textColor="@android:color/black"
    android:textSize="@dimen/text_size_normal"
    android:textStyle="bold" />
</RelativeLayout>